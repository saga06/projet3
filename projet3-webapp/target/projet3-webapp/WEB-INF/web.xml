<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
        version="3.0">


    <!--Accueil -->
    <servlet>
        <servlet-name>Accueil</servlet-name>
        <servlet-class>org.oc.servlets.Accueil</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Accueil</servlet-name>
        <url-pattern>/accueil</url-pattern>
    </servlet-mapping>

    <!--Login -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>org.oc.servlets.Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Register page (same jsp as login page but different servlet) -->

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>org.oc.servlets.Register</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

     <!--Welcome page -->

    <servlet>
        <servlet-name>Welcome</servlet-name>
        <servlet-class>org.oc.servlets.Welcome</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Welcome</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>


    <!-- Sites d'escalade description -->
    <servlet>
        <servlet-name>Test</servlet-name>
        <servlet-class>org.oc.servlets.Test</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Test</servlet-name>
        <url-pattern>/sites</url-pattern>
    </servlet-mapping>



    <!-- Topos sharing page-->
    <servlet>
        <servlet-name>Topos</servlet-name>
        <servlet-class>org.oc.servlets.Topos</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>Topos</servlet-name>
        <url-pattern>/topos</url-pattern>
    </servlet-mapping>

    <!-- Contact page-->
    <servlet>
        <servlet-name>Contact</servlet-name>
        <servlet-class>org.oc.servlets.Contact</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>Contact</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>




    <!-- ========================================================================== -->
    <!-- Other  -->
    <!-- ========================================================================== -->


    <resource-ref>
        <res-ref-name>jdbc/DB_projet3</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>


    <!-- To insert the JSTL in all the JSP pages -->

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>include/taglibs.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>



</web-app>

