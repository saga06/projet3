    <!-- Login page -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Register page (same jsp as login page but different servlet) -->

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- Welcome page -->

    <servlet>
        <servlet-name>Welcome</servlet-name>
        <servlet-class>Welcome</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Welcome</servlet-name>
        <url-pattern>/Welcome</url-pattern>
    </servlet-mapping>


    <!-- Spots description -->
    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>org.oc.escalade.webapp.Test</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/sites</url-pattern>
    </servlet-mapping>



    <!-- Topos sharing page-->
    <servlet>
        <servlet-name>topos</servlet-name>
        <servlet-class>org.oc.escalade.webapp.topos</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>topos</servlet-name>
        <url-pattern>/topos</url-pattern>
    </servlet-mapping>



    <!--
    <servlet>
        <servlet-name>postgre</servlet-name>
        <servlet-class>org.oc.escalade.postgre</servlet-class>
    </servlet> -->

    <resource-ref>
        <res-ref-name>jdbc/DB_projet3</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!-- Pour intégrer la jstl à tous les pages jsp -->
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>

</web-app>

